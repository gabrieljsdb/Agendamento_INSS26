# Configurações do Ambiente
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=America/Sao_Paulo

# Configurações do Banco de Dados
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=sistema_agendamento
DB_USERNAME=seu_usuario
DB_PASSWORD=sua_senha
DB_CHARSET=utf8mb4

# Configurações de Email (SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=seu_email@exemplo.com
MAIL_PASSWORD=sua_senha_app
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@oab-sc.org.br
MAIL_FROM_NAME="OAB/SC - Sistema de Agendamento"

# Emails de Administradores (separados por vírgula)
ADMIN_EMAILS=admin1@exemplo.com,admin2@exemplo.com

# Configurações de Sessão
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Configurações de Segurança
CSRF_TOKEN_NAME=csrf_token
HASH_ALGO=bcrypt

# Configurações de Agendamento
AGENDA_ID_PADRAO=1
AGENDAMENTO_LIMITE_MENSAL=2
AGENDAMENTO_BLOQUEIO_CANCELAMENTO_HORAS=2
AGENDAMENTO_HORARIO_INICIO=08:00:00
AGENDAMENTO_HORARIO_FIM=12:00:00
AGENDAMENTO_DURACAO_MINUTOS=30
AGENDAMENTO_DIAS_ANTECEDENCIA_MAXIMA=30
AGENDAMENTO_BLOQUEIO_HORARIO_LIMITE=19:00:00

# Configurações de Log
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_FILES=30

# Configurações de SOAP (Autenticação OAB)
SOAP_WSDL_URL=https://servicos.oab-sc.org.br/WSAutenticar/WSAutenticar.asmx?WSDL
SOAP_CACHE_WSDL=0
SOAP_TRACE=1

# Configurações de Fila (para emails assíncronos)
QUEUE_DRIVER=database
QUEUE_CONNECTION=default

# Configurações de Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf
